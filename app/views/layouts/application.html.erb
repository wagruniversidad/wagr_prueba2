<!DOCTYPE html>
<html>
  <head>
    <title>ImageRails</title>
    <%= csrf_meta_tags %>



    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <ul class="collapse navbar-collapse justify-content-end ig-header-menu">
      <%- if user_signed_in? %> <%# validamos si hay usuario registrado%>
      <li class="nav-item ig-item-menu">
        <%= link_to 'Salir', destroy_user_session_path, method: :delete %>
      </li>

      <% else %> <%# si no lo esta mostramos los botones de inicio y registro%>
        <li class="nav-item ig-item-menu">
          <%= link_to 'Iniciar SesiÃ³n', new_user_session_path %>
        </li>

        <li class="nav-item ig-item-menu">
          <%= link_to 'Registrar', new_user_registration_path %>
        </li>

      <% end %>

</ul>
    <div class="container">
      <%= yield %>
        
        
      <div class="ig-alert">

        <% flash.each do |key, value| %>

          <div class="alert alert-<%= key %> alert-dismissable" role="alert">

            <button type="button" data-dismiss="alert" class="close">
            <span aria-hidden="true">&times;</span>
            </button>
            <%= value %>

          </div>
        <% end %>
      </div>
    </div>
  </body>
</html>
